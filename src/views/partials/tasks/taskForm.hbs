<div class="card card-body p-4 rounded-0 bg-dark text-white">
  <form action="/tasks/add" method="post">

  <h3>Add a Task</h3>
  <div>
    <label for="title">Write a title</label>
    <input type="text" name="title" class="form-control rounded-0 bg-dark text-white">
  </div>
  <div>
    <label for="description">Add a description</label>
    <textarea name="description" class="form-control rounded-0 bg-dark text-white"></textarea>
  </div>

  <button class="btn btn-primary btn-sm mt-2">Add</button>
  
</form>
</div>